<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.DAZNRecruitmentTask" parent="@android:style/TextAppearance" />

    <style name="TextAppearance.DAZNRecruitmentTask.List.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.List.Subtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.List.Info" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_on_surface_50</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.Header" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.Navigation" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_navigation_color_state</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:background">?attr/colorTertiary</item>
        <item name="backgroundTint">?attr/colorTertiary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.DAZNRecruitmentTask.Button.Small">
        <item name="android:textSize">12sp</item>
    </style>
</resources>